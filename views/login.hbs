<h1 class="title is-2">Login på konto</h1>
<form action="/login" method="POST">
    <div class="field">
        <label class="label">Email</label>
        <div class="control">
            <input class="input" type="email" name="email" value={{post.email}}>
        </div>
    </div>
    <div class="field">
        <label class="label">Password</label>
        <div class="control">
            <input class="input" type="password" name="password" value={{post.password}}>
        </div>
    </div>
    <div class="field">
        <div class="control">
            <button class="button is-success">Login</button>
            <hr>
            <a class="button is-info" href="/register">Gå til register</a>

        </div>
    </div>
</form>