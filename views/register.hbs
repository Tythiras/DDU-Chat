<h1 class="title is-2">Opret konto</h1>
<form action="" method="POST">
    <div class="field">
        <label class="label">Email</label>
        <div class="control">
            <input class="input" type="email" name="email" value={{post.email}}>
        </div>
    </div>
    <div class="field">
        <label class="label">Password</label>
        <div class="control">
            <input class="input" type="password" name="password" value={{post.password}}>
        </div>
    </div>
    <div class="field">
        <label class="label">Password igen</label>
        <div class="control">
            <input class="input" type="password" name="passwordRepeat" value={{post.passwordRepeat}}>
        </div>
    </div>
    <hr>
    <div class="field">
        <div class="control">
            <button class="button is-success">Opret</button>
            <hr>
            <a class="button is-info" href="/">GÃ¥ til login</a>

        </div>
    </div>
